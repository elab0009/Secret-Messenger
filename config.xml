<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.elab0009.SecretMessenger" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SecretMessenger</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <icon src="res/icon-60.png" width="60" height="60" />
        <icon src="res/icon-80.png" width="80" height="80" />
        <icon src="res/icon-120.png" width="120" height="120" />
        <icon src="res/icon-180-02.png" width="180" height="180" />

     

        
        <splash src="res/splash-640.png" width="640" height="960"/>
        <splash src="res/splash-320.png" width="320" height="480"/>
        <splash src="res/splash-750-02.png" width="750" height="1334"/>
        
        
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="2000" /> 
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
</widget>
